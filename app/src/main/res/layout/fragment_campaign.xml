<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin">
        <TextView
            android:layout_height="0dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/dark_grey"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:text="Статус заявления:"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/cTVStatus"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:text="Принято"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/cTVDirections"
            android:layout_height="0dp"
            android:layout_width="wrap_content"
            android:textSize="@dimen/article_subheading"
            android:textColor="@color/dark_grey"
            android:text="Выбранные направления:"
            android:layout_weight="1"/>
        <LinearLayout
            android:id="@+id/cLLDirections"
            android:orientation="vertical"
            android:layout_height="0dp"
            android:layout_width="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_weight="1">
        </LinearLayout>
        <TextView
            android:id="@+id/cTVResult"
            android:layout_height="0dp"
            android:layout_width="wrap_content"
            android:textSize="@dimen/article_subheading"
            android:textColor="@color/dark_grey"
            android:text="Результаты ЕГЭ:"
            android:layout_weight="1"/>
        <LinearLayout
            android:id="@+id/cLLEge"
            android:orientation="vertical"
            android:layout_height="0dp"
            android:layout_width="wrap_content"
            android:layout_weight="1">
        </LinearLayout>
    </LinearLayout>
</ScrollView>