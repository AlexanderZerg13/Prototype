<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="7dp"
    android:paddingLeft="7dp">
    <TextView
        android:id="@+id/sLessonTVName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Защита в операционных системах"
        android:gravity="center_horizontal"
        android:paddingBottom="5dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sLessonTVDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="11.05.16 \n11:30"
            android:paddingRight="7dp"
            android:layout_weight="2" />
        <TextView
            android:id="@+id/sLessonTVTeacher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Кирилов Сергей Владимирович"
            android:layout_weight="5"
            android:textColor="@color/colorPrimary"
            android:gravity="center_horizontal"
            android:paddingRight="7dp" />
        <TextView
            android:id="@+id/sLessonTVRoom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="9-402А"
            android:layout_weight="2"
            android:gravity="right" />
    </LinearLayout>
</LinearLayout>